
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @cocktail do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name, placeholder: "Name your cocktail" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>

    </div>
  </div>
</div>

